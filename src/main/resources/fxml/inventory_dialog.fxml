<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" prefWidth="400" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.PL.pig_ranch.controller.InventoryDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <Label fx:id="titleLabel" text="Inventory Item" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <GridPane hgap="10.0" vgap="10.0">
            <children>
                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" HBox.hgrow="ALWAYS"/>
                
                <Label text="Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="typeComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="250" editable="true"/>
                
                <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextArea fx:id="descriptionArea" GridPane.rowIndex="2" GridPane.columnIndex="1" prefHeight="60" wrapText="true"/>
                
                <Label fx:id="quantityLabel" text="Initial Quantity:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="quantityField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
        
        <HBox fx:id="adjustmentBox" spacing="10.0" alignment="CENTER_LEFT" visible="false" managed="false">
            <children>
                <Label text="Adjustment Type:"/>
                <ComboBox fx:id="adjTypeComboBox" prefWidth="150"/>
            </children>
        </HBox>
        
        <Region VBox.vgrow="ALWAYS"/>
        
        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <children>
                <Button text="Cancel" onAction="#handleCancel"/>
                <Button text="Save" onAction="#handleSave" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
            </children>
        </HBox>
    </children>
</VBox>
