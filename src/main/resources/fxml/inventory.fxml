<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.PL.pig_ranch.controller.InventoryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Button text="â† Back" onAction="#handleBackClick"/>
                <Label text="Inventory Management">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchField" promptText="Search items..." prefWidth="250"/>
                <Button text="+ Add Item" onAction="#handleAddItemClick"/>
            </children>
        </HBox>

        <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
                <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="80"/>
                <TableColumn fx:id="colDescription" text="Description" prefWidth="200"/>
                <TableColumn fx:id="colActions" text="Actions" prefWidth="200"/>
            </columns>
        </TableView>
    </children>
</VBox>
